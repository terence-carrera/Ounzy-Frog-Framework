# ==============================================
# Frog Framework .gitignore
# ==============================================
# Adjust as needed. Keep this lean & focused.

# --- Composer ---
/vendor/
/composer.phar
# Keep lock file for reproducible installs
!composer.lock

# --- Environment / Secrets ---
.env
.env.*
!/.env.example

# --- Logs ---
*.log
logs/
/storage/logs/
php_errors.log

# --- Cache / Temp ---
.cache/
/tmp/
/temp/
/storage/cache/
bootstrap/cache/
*.cache
*.compiled.php
.phpunit.result.cache

# --- Coverage / Reports ---
coverage/
clover.xml
html-report/

# --- IDE / Editor ---
.idea/
.vscode/
*.iml

# --- OS Files ---
.DS_Store
Thumbs.db

# --- Node (optional future tooling) ---
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# --- Published / Generated Public Assets ---
public/vendor/
public/storage/
public/assets/
# Keep favicon & index, do not blanket ignore public/*

# --- Misc ---
*.swp
*.swo
*.orig
*.bak

# End of file
